# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRES_IN=7d

# Supabase Configuration
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Email Configuration (for sending invitation emails)
# For Gmail: Use app-specific password (https://support.google.com/accounts/answer/185833)
# For other providers: Use SMTP credentials from your email service
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@tripzz.com

# Twilio SMS Configuration (Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# WeatherStack API Configuration
WEATHERSTACK_API_KEY=your-weatherstack-api-key-here

# Gemini AI Configuration (for intelligent chatbot analysis)
GEMINI_API_KEY=your-gemini-api-key-here

# File Upload Configuration (Optional)
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# OpenWeather API Configuration (for Chatbot Weather Feature)
OPENWEATHER_API_KEY=your-openweather-api-key
